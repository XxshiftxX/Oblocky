<local:BaseBlockControl x:Class="OblockyGraphics.PrintBlockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OblockyGraphics"
             mc:Ignorable="d" >
    <Border x:Name="BackgroundBorder" Background="#43a047" CornerRadius="5" 
            MouseLeftButtonDown="BackgroundMouseDown" MouseMove="BackgroundMouseMove" MouseLeftButtonUp="BackgroundMouseUp">
        <StackPanel Margin="5" Orientation="Horizontal" >
            <Border Height="30" Width="80" Margin="0, 0, 10, 0" Background="#212121" BorderThickness="3" CornerRadius="10" />
            <TextBlock Text="라고 출력합니다." FontSize="13" VerticalAlignment="Center"/>
        </StackPanel>
    </Border>
</local:BaseBlockControl>
